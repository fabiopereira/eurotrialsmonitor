<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>eurotrialsmonitorservlet</servlet-name>
		<servlet-class>me.fabiopereira.eurotrialsmonitor.EurotrialsmonitorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>eurotrialsmonitorservlet</servlet-name>
		<url-pattern>/eurotrialsmonitorservlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>eurotrialsmonitor</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>eurotrialsmonitor</servlet-name>
		<url-pattern>/eurotrialsmonitor/*</url-pattern>
	</servlet-mapping>	
	
</web-app>
